<%- include("includes/header")%>

    <section id="section-main" class="light-grey">
        <div class="container py-3">

            <% errors.forEach((error) => { %>
                <div class="alert alert-danger text-center">
                    <%= error %>
                </div>
            <% }) %>

            <form action="/create/vegetable" method="POST">
                <div class="my-3">
                    <h2 class="text-center">Vegetable</h2>
                    <div class="row">
                        <div class="col-md mb-2">
                            <input type="text" name="name" class="form-control" placeholder="put a vegetable">
                        </div>
                        <div class="col-md mb-2">
                            <input type="number" step="0.01" name="quantity" class="form-control" placeholder="put a quantity">
                        </div>
                        <div class="col-md mb-2">
                            <select name="unit" class="form-select">
                                <option value="kg">kg</option>
                                <option value="box">box</option>
                                <option value="package">package</option>
                                <option value="single">piece</option>
                                <option value="other">other</option>
                            </select>
                        </div>
                        <div class="col-md">
                            <button type="submit" class="btn btn-light">save and submit</button>
                        </div>
                    </div>
                </div>   
            </form>
