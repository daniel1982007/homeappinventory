<%- include("includes/header")%>

    <section id="section-main" class="light-grey">
        
        <div class="center-box">
            <form action="/create/vegetable" method="POST">
                <div class="input-box">
                    <label for="name">蔬菜</label>
                    <input type="text" name="name" class="text-input" placeholder="输入蔬菜名">
                    <input type="number" step="0.01" name="quantity" class="number-input">
                    <p>公斤</p>
                    <button type="submit" class="btn btn-template">保存并提交</button>    
                </div>  
            </form>
            <form action="/create/meat" method="POST">
                <div class="input-box">
                    <label for="name">肉类</label>
                    <input type="text" name="name" class="text-input" placeholder="输入肉类名">
                    <input type="number" step="0.01" name="quantity" class="number-input">
                    <p>公斤</p>
                    <button type="submit" class="btn btn-template">保存并提交</button>
                </div>
            </form>
            <form action="/create/fruit" method="POST">
                <div class="input-box">
                    <label for="name">水果</label>
                    <input type="text" name="name" class="text-input" placeholder="输入水果名">
                    <input type="number" step="0.01" name="quantity" class="number-input">
                    <p>公斤</p>
                    <button type="submit" class="btn btn-template">保存并提交</button>
                </div>
            </form>
            <form action="/create/other" method="POST">
                <div class="input-box">
                    <label for="name">其他</label>
                    <input type="text" name="name" class="text-input" placeholder="输入其他类">
                    <input type="number" step="0.01" name="quantity" class="number-input">
                    <p>公斤</p>
                    <button type="submit" class="btn btn-template">保存并提交</button>
                </div>
            </form>
            <a href="/" class="btn btn-template">返回总览</a>
        </div>
    </section>

<%- include("includes/footer")%>