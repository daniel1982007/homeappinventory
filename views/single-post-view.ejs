<%- include("includes/header") %>
    <section id="record" class="light-grey">
        <div class="container py-3">
            <% success.forEach((successMessage) => { %>
                <div class="alert alert-success text-center">
                    <%= successMessage %>
                </div>
            <% }) %>
            <div class="flex-row justify-content-center mb-2">
                <!-- <a href="/create" class="mr-3 text-decoration-none text-dark"><i class="fa fa-angle-double-left text-primary"></i>&nbsp返回继续创建</a> -->
                <a href="/<%= post.category%>/<%= post._id%>/edit" class="mr-3 text-primary"><i class="fa fa-edit"></i></a>
                <!-- <a href="/delete/<%= post._id%>" class="mr-3 text-danger"><i class="fa fa-trash-o"></i></a> -->
                <form action="/delete/<%= post.category%>/<%= post._id%>" method="POST"><button><i class="fa fa-trash-o"></i></button></form>
            </div>
            <ul class="list-group text-center mb-3">
                <li class="list-group-item active"><h2 class="mb-0"><%= post.category%></h2></li>
                <li class="list-group-item light-grey">
                    <span class="h4"><%= post.name %></span>&nbsp;
                    <span class="h4"><%= post.quantity %></span>
                    <span class="h4"><%= post.unit %></span>
                </li>
            </ul>
            <div class="flex-row">
                <a href="/profile/<%= post.author.username %>" class="mr-2"><img src="<%= post.author.avatar %>" class="img-fluid rounded-circle avatar-header"></a><span class="mr-2"><%= post.author.username %></span><span>create date <%= post.createDate.getMonth() + 1%>/<%= post.createDate.getDate()%>/<%= post.createDate.getFullYear()%></span> 
            </div>
        </div>
    </section> 
<%- include("includes/footer") %>