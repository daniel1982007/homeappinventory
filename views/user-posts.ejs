<%- include("includes/header") %>
<div class="light-grey">
    <div class="container py-3">
        <% success.forEach((successMessage) => { %>
            <div class="alert alert-success text-center">
                <%= successMessage %>
            </div>
        <% }) %>
        <div class="flex-row align-items-center">
            <span class="h3 mb-0">userï¼š</span><img src="<%= foundUserAvatar%>" class="img-fluid rounded-circle avatar-header d-inline-block mx-2" alt=""><span class="h3 mb-0"><%= foundUsername %></span>
        </div>
        <ul class="list-group mt-3">
            <li class="list-group-item active">
                <h3 class="mb-0 text-center">record list</h3>
            </li>
            <% posts.forEach(function(post) { %>
                <li class="list-group-item light-grey">
                    <a href="/<%= post.category%>/<%= post._id %>" class="text-decoration-none text-dark">
                        <div class="row">
                            <h4 class="col-3 mb-0"><%= post.name %></h4>
                            <h4 class="col-3 mb-0"><%= post.quantity %></h4>
                            <h4 class="col-2 mb-0"><%= post.unit %></h4>
                            <h6 class="col-4 mb-0"><%= post.createDate.getMonth()+1 %>/<%= post.createDate.getDate() %>/<%= post.createDate.getFullYear() %></h6>

                        </div>
                    </a>
                </li>
            <% }) %>     
        </ul>
    </div>
</div>

<%- include("includes/footer") %>