<%- include("includes/header") %>

        <section id="content">
            <div class="pt-2 light-grey">
                <% mistakes.forEach(function(mistake) { %>
                    <div class="container">
                        <div class="alert alert-danger mb-0 p-2 text-center"><%= mistake %></div>
                    </div>  
                <% }) %>
            </div>
            <div class="d-flex flex-column flex-md-row align-items-center text-center pt-4 light-grey">
                <div class="container px-5 my-2">
                    <h2>Lorem ipsum dolor sit.</h2>
                    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Facilis, odit, aliquid sapiente velit sequi consequuntur quibusdam, omnis harum quisquam eius ea. Aut ullam hic non doloribus magni maxime suscipit ducimus!</p>
                </div>
                <div class="container px-5 my-2">
                    <% regErrors.forEach(function(regError) { %>
                        <div class="alert alert-danger p-2 text-center"><%= regError %></div>
                    <% }) %>
                    
                    <h2>Registration</h2>
                    <form action="/register" method="POST">
                        <div class="mx-4 mb-2">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" id="username" class="form-control" placeholder="choose a username">
                        </div>
                        <div class="mx-4 mb-2">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="email" id="email" class="form-control" placeholder="choose an email">
                        </div>
                        <div class="mx-4 mb-2">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="set a password">
                        </div>
                        <div class="mx-4 mb-2">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>  
                </div>
            </div>
        </section>

<%- include("includes/footer")%>